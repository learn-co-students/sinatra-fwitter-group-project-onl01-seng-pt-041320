<h2>Users</h2>

<% unless locals.empty? %>
  <%= message %>
<% end %>


<h3>Sign Up</h3>
<form action="/signup" method="POST">
  <p>Username: <input type="text" name="[user][username]"></p>
  <p>Email: <input type="text" name="[user][email]"></p>
  <p>Password: <input type="text" name="[user][password]"></p>
  <input type="submit" value="Sign Up">
</form>